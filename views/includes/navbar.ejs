<style>
  .btn-search {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .btn-search:hover {
    background-color: #fe424d;
    color: white;
  }

  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search-input {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }

  .navbar-collapse {
    background-color: white !important;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"
      ><i class="fa-regular fa-compass"></i
    ></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <!-- <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/listings">Home</a>
        </li> -->
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
      </ul>

      <!-- search -->
      <div class="navbar-nav ms-auto >
        <form class="d-flex" action="/search" method="post" class="needs-validation" novalidate>
          <input
            class="form-control me-2 search-input"
            type="search"
            placeholder="Search destinations"
            name="search"
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
        </li>
        <% if(!currentUser){%>
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/signup"
            ><b>Signup</b></a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/login"><b>Login</b></a>
        </li>
        <%}%> <% if(currentUser){%>
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/logout"
            ><b>Logout</b></a
          >
        </li>
        <%}%>
      </div>
    </div>
  </div>
</nav>
